<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.giris.drdroid.fragments.finddoctorsfragments.doctorlistfragments.bookappointmentfragments.BookFragment"
    android:id="@+id/layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please choose a slot that is available."
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:padding="15dp"/>

    <com.rey.material.widget.Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/cpb_blue"
        android:text="Choose Slot"
        android:padding="10dp"
        android:layout_below="@+id/password"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

</LinearLayout>
